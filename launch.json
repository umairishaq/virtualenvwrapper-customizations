    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Python: Specific File",
            "type": "python",
            "request": "launch",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            // "args": ["develop"],
            "justMyCode": false,
            "stopOnEntry": false
        },
        {
            "name": "Python: Unit Tests",
            "type": "python",
            "request": "launch",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "cwd": "${workspaceFolder}/src/tests/",
            "console": "integratedTerminal",
            "module": "pytest",
            "justMyCode": false,
            "stopOnEntry": false,
            // "args": [
            //     "--no-cov"
            // ]
        }
    ]
}
